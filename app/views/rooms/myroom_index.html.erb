<table class="myroom_index_container">
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>宿泊料金</th>
      <th>作成日</th>
    </tr>
  </thead>
  <tbody class="myroom_contents_container">
    <% @myrooms.each do |room| %>
      <tr>
        <td class="hotel_image">
          <% if room.hotel_image.attached? %>
            <%= image_tag room.hotel_image.variant(resize: '120x80'), class: "hotel_image" %>
          <% else %>
            <%= image_tag 'https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png', size: '120x80' %>
          <% end %>
        </td>
        <td class="hotel_detail_link"><%= link_to room.hotel_name, room %></td>
        <td class="hotel_detail"><%= room.hotel_detail %></td>
        <td class="hotel_price"><%= number_to_currency(room.hotel_price.to_i, unit: "円", precision: 0, delimiter: ',', format: "%n %u") + "〜" %></td>
        <td class="hotel_created_time"><%= room.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
