<h1>rooms/search※未使用ページ</h1>

<table>
  <thead>
    <tr>
      <th>Hotel Name</th>
      <th>Hotel Detail</th>
      <th>Hotel Price</th>
      <th>Hotel Address</th>
      <th>Hotel Image</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.hotel_name %></td>
        <td><%= room.hotel_detail %></td>
        <td><%= room.hotel_price %></td>
        <td><%= room.hotel_address %></td>
        <td>
          <% if room.hotel_image.attached? %>
            <%= image_tag room.hotel_image.variant(resize: '40x40'), class: "hotel_image" %>
          <% else %>
            <%= image_tag 'https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png', size: '40x40' %>
          <% end %>
        </td>
        <td><%= link_to "詳細", room %></td>
      </tr>
    <% end %>
  </tbody>
</table>
