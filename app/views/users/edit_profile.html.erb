<%= form_with model: Current.user, url: edit_profile_path do |form| %>
  <% if Current.user.errors.any? %>
    <div class="alert alert-danger">
      <% Current.user.errors.full_messages.each do |message|  %>
        <div>
          <%= message %>
        </div>
      <% end  %>
    </div>
  <% end %>
  <div class="form-group">

  <h2>設定</h2>
  <li class="nav-item">
    <%= link_to "アカウント", account_path, class: 'nav-link' %>
    <%= link_to "プロフィール", profile_path, class: 'nav-link' %>
  </li>

    <%= form.label :アイコン画像 %>
    <% if Current.user.image.attached? %>
      <%= image_tag Current.user.image.variant(resize: '40x40'), class: "avatar_image" %>
    <% else %>
      <%= image_tag 'https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png', size: '40x40' %>
    <% end %>
    <%= form.file_field :image, accept: 'image/*' %>
  </div>

  <div class="form-group">
    <%= form.label :名前 %>
    <%= form.text_field :user_name, placeholder: "名前を入力してください", class: "form-control mb-3"  %>
  </div>
  <div class="form-group">
    <%= form.label :自己紹介 %>
    <%= form.text_field :introduction, placeholder: "自己紹介を入力", class: "form-control mb-3"  %>
  </div>
  <div class = "submit_button">
    <%= form.submit "保存", class:'btn btn-primary' %>
    <%= link_to "キャンセル", :account, class: "button" %><% end %>
  </div>
