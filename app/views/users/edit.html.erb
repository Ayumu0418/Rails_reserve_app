<%= form_with model: Current.user, url: edit_path do |form| %>
  <% if Current.user.errors.any? %>
    <div class="alert alert-danger">
      <% Current.user.errors.full_messages.each do |message|  %>
        <div>
          <%= message %>
        </div>
      <% end  %>
    </div>
  <% end %>
  <h2>設定</h2>
  <li class="nav-item">
    <%= link_to "アカウント", account_path, class: 'nav-link' %>
    <%= link_to "プロフィール", profile_path, class: 'nav-link' %>
  </li>
  <div class="form-group">
    <%= form.label :メールアドレス %>
    <%= form.text_field :email, placeholder: "メールアドレスを入力してください", class: "form-control mb-3"  %>
  </div>
  <div class="form-group">
    <%= form.label :変更後パスワード %>
    <%= form.password_field :password, placeholder: "変更後パスワードを入力", class: "form-control mb-3"  %>
  </div>
  <div class="form-group">
    <%= form.label :確認用パスワード %>
    <%= form.password_field :password_confirmation, placeholder: "変更後パスワードをもう一度入力", class: "form-control mb-3"  %>
  </div>
  <div class="form-group">
    <%= form.label :現在のパスワード %>
    <%= form.password_field :current_password, placeholder: "変更前のパスワードを入力", class: "form-control mb-3"  %>
  </div>
  <div class = "submit_button">
    <%= form.submit "保存", class:'btn btn-primary' %>
    <%= link_to "キャンセル", :root, class: "button" %><% end %>
  </div>