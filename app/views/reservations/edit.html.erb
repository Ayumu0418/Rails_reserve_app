<h1>edit_reservation#index</h1>

<div class = "detail_container">
    <div class = "new_h3">
      <div>
        <p><%= link_to "← 一覧に戻る", :reservations, class:"back_button"  %></p>
      </div>
    </div>

  <td>
    <% if @room.hotel_image.attached? %>
      <%= image_tag @room.hotel_image.variant(resize: '200x200'), class: "hotel_image" %>
    <% else %>
      <%= image_tag 'https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png', size: '280x200' %>
    <% end %>
  </td>

  <table class = "new_form">
    <tr class = "new_list">
      <tr class="new_list">
        <td><%= @room.hotel_name %></td>
      </tr>
      <tr class = "new_list">
        <td><%= @room.hotel_price %></td>
      </tr>
      <tr class = "new_list">
        <td><%= @room.hotel_address %></td>
      </tr>
      <tr class = "new_list">
        <td><%= @room.hotel_detail %></td>
      </tr>

    <tr class="reserve_container"> 
      <td>
      <%= form_with model: @reservation, url: reservation_path(@reservation), method: :patch do |f| %>
          <table>
            <tr class="check_in_form">
              <th><%= f.label :start, "チェックイン" %></th>
              <td><%= f.date_field :start %></td>
            </tr>
            <tr class="check_out_form">
              <th><%= f.label :end, "チェックアウト" %></th>
              <td><%= f.date_field :end %></td>
            </tr>
            <tr class="people_form">
              <th><%= f.label :people, "人数" %></th>
              <td><%= f.number_field :people %></td>
            </tr>
          </table>
      </td>
    </tr> 

    <tr class="submit_button">
      <td class="save_button">
        <div>
          <%= f.submit "保存", class: "save" %>
        </div>
      </td>
    </tr>
    <% end %>
  </table>
</div>
